<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/shoppingcart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/item9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item 1" />

                <EditText
                    android:id="@+id/item1price"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/item8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item 2" />

                <EditText
                    android:id="@+id/item2price"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/item7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item 3" />

                <EditText
                    android:id="@+id/item3price"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/item6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item 4" />

                <EditText
                    android:id="@+id/item4price"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/item5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item 5" />

                <EditText
                    android:id="@+id/item5price"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/item4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item 6" />

                <EditText
                    android:id="@+id/item6price"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/item3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item 7" />

                <EditText
                    android:id="@+id/item7price"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/item2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item 8" />

                <EditText
                    android:id="@+id/item8price"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/item88"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item 9" />

                <EditText
                    android:id="@+id/item9price"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/item1"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:text="Item 10" />

                <EditText
                    android:id="@+id/item10price"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <Button
                    android:id="@+id/addbutton"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:text="Total Items" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>